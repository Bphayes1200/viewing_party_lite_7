<h1>Discover Movies</h1>

<%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies", params: {q: 'top rated'}, method: :get %>

<div id="search_movies">
<%= form_tag("/users/#{@user.id}/movies", method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Find Movies") %>
<% end %>